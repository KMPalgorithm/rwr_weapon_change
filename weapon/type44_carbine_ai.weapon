<?xml version="1.0" encoding="utf-8"?>
<weapon file="base_primary_rifle.weapon" key="type44_carbine_ai.weapon" drop_count_factor_on_death="0.0">
	<tag name="cqb" />

<access_tag name="pacific" />

	<specification 
	retrigger_time="-1.0" 
	spread_range="0.3"
	accuracy_factor="0.95" 
	sustained_fire_grow_step="0.5" 
	sustained_fire_diminish_rate="0.7"
	magazine_size="5" 
	can_shoot_standing="1" 
	suppressed="0" 
	name="Type 44 Carbine" 
	class="2" 
	reload_one_at_a_time="0" 
	projectile_speed="100.0" 
	barrel_offset="0.5" 
	projectiles_per_shot="1"
    stab_enabled="1"
    success_probability="3.0"
    stab_range="3.0"
	/>

	<!-- AI versions of these weapons are worse than player versions to reduce the frustration of getting insta-killed so often -->
	<!-- they have lower damage, lower velocity, and lose the mild sight range boost for bolt-actions -->
	<!-- when the AI dies with them they must transform into their normal version, handled below. a requirement with this is drop-count factor on death be 0 -->
	<drop_on_death_result class="spawn" instance_class="weapon" instance_key="type44_carbine.weapon" min_amount="1" max_amount="1" offset="0 1.0 0" position_spread="0 0" direction_spread="0 0" />


	<!--Had to use Base Primary Rifle to avoid the animation issue with semi-auto prone recoil anims.-->

	<modifier class="speed" value="-0.05" />

	<stance state_key="running" accuracy="0.45" />
	<stance state_key="walking" accuracy="0.5" />
	<stance state_key="crouch_moving" accuracy="0.5" />


	<animation key="recoil" ref="27" />
	<animation key="cycle" animation_key="bolt cycle very fast" />
	<animation key="cycle" stance_key="prone" animation_key="bolt cycle very fast, prone" />
	<animation key="reload" animation_key="reloading, bolt action" />
